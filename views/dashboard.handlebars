<section class="text-center">
  <h2>Create New Project</h2>

  <form class="new-post-form text-center">
    <div>
      <label for="post-title">Project Name</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Relevant links???? </label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn btn-primary ">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="text-center">
  <h2 style="padding-top: 15px; padding-bottom: 15px">Your Projects</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link btn-no-style text-center">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>